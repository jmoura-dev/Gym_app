generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(uuid())

  name          String
  email         String        @unique
  password_hash String
  isAdmin       Boolean       @default(false)
  Trainings     Training[]
  Assessments   Assessment[]

  @@map("users")
}

model Training {
  id         String   @id @default(uuid())

  name       String?
  user       User     @relation(fields: [user_id], references: [id])
  user_id    String

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  Exercise Exercise[]

  @@map("trainings")
}

model Exercise {
  id          String @id @default(uuid())

  name        String
  focus       String
  repetitions Int
  link_demo   String?

  training    Training @relation(fields: [training_id], references: [id])
  training_id String

  @@map("exercises")
}

model Assessment {
  id              String   @id @default(uuid())

  user            User     @relation(fields: [user_id], references: [id])
  user_id         String

  created_at      DateTime @default(now())

  weight          Decimal?
  height          Decimal?
  body_mass_index Decimal?
  fat_percentage  Decimal?

  @@map("assessments")
}
